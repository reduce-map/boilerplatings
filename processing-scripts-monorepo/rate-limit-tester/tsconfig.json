{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["es6", "DOM"],
    "outDir": "./build",
    "rootDir": "./source",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "checkJs": false,
    "types": ["node"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "typeRoots": ["@types", "node_modules/@types"],
    "declaration": true,
    "composite": true,
    "paths": {
      "logger": ["../../logger/build"]
    }
  },
  "include": ["./source/**/*"],
  "files": [
    "./source/configuration/jsonConfigs/appConfig.json",
    "./source/configuration/jsonConfigs/urlsConfig.json",
    "./source/configuration/jsonConfigs/workersConfig.json"
  ],
  "references": [{ "path": "../../logger" }]
}
