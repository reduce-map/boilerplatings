{
  "compilerOptions": {
      "skipLibCheck": true,
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": true,
      "resolveJsonModule": true,             
      "lib": ["es6","DOM"],                     
      "outDir": "./build",    
      "rootDir": "./source",     
      "strict": true,   
      "esModuleInterop": true,
      "sourceMap": true,      
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "downlevelIteration": true,
      "checkJs": false,
      "types": ["node"],
      "tsBuildInfoFile": "./.tsbuildinfo", 
      "typeRoots": ["@types","node_modules/@types"],     
      "declaration": true,
      "composite":true,
      "paths": {
          "steam-interaction":["../../steam-monorepo/steam-interaction/build"],
          "account-contract": ["../../steam-monorepo/account-contract/build"],
          "steam-authorization": ["../../steam-monorepo/steam-authorization/build"],
          "polyData": ["../../polyData/build"],
      }
  },
  "include": ["./source/**/*", "./source/configuration/socks5List.json"],
  "references": [
      {"path": "../../steam-monorepo/steam-interaction"},
      {"path": "../../steam-monorepo/account-contract"},
      {"path" : "../../steam-monorepo/steam-authorization"},
      {"path": "../../polyData"},
  ]
}