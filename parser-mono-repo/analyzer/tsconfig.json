{
    "compilerOptions": {
        "noEmit": false,
        "target": "es5",                          
        "module": "NodeNext",                   
        "lib": ["es6","DOM"],                     
        "allowJs": true,
        "outDir": "build",    
        "rootDir": "source",     
        "strict": true,   
        "sourceMap": true,      
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "declaration": true,
        "composite":true,
    },
    "include": ["source/**/*.ts"],
}
