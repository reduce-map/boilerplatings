{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,             
        "lib": ["es6","DOM"],                     
        "outDir": "./build",    
        "rootDir": "./source",     
        "strict": true,   
        "esModuleInterop": true,
        "sourceMap": true,      
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "checkJs": false,
        "types": ["node"],
        "tsBuildInfoFile": "./.tsbuildinfo", 
        "typeRoots": ["@types","node_modules/@types"],     
        "declaration": true,
        "composite":true,
        "paths": {
            "polyData":["../../polyData/build"],
            "steam-interaction":["../../steam-monorepo/steam-interaction/build"],
            "account-contract":["../../steam-monorepo/account-contract/build"],
          
        }
    },
    "include": ["./source/**/*","./source/config.json"],
    "references": [
        {"path": "../../polyData"},
        {"path": "../../steam-monorepo/steam-interaction"},
        {"path": "../../steam-monorepo/account-contract"},
      
    ]
}
  