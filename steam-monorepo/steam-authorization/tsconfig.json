{
  "compilerOptions": {
      "skipLibCheck": true,
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,             
      "lib": ["es6","DOM"],                     
      "outDir": "./build",    
      "rootDir": "./source",     
      "strict": true,   
      "esModuleInterop": true,
      "sourceMap": true,      
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "downlevelIteration": true,
      "checkJs": false,
      "types": ["node"],
      "tsBuildInfoFile": "./.tsbuildinfo", 
      "typeRoots": ["@types","node_modules/@types"],     
      "declaration": true,
      "composite":true,
      "paths": {
          "@team/steam-interaction":["../steam-interaction/build"],
          "@team/account-contract": ["../account-contract/build"],
          "@team/polydata": ["../../polyData/build"],
      }
  },
  "include": ["./source/**/*", "./source/tests/config/socks5List.json"],
  "references": [
      {"path": "../steam-interaction"},
      {"path": "../account-contract"},
      {"path": "../../polyData"},
  ]
}