{
  "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "lib": ["es6","es2023",
      "DOM"],
      "rootDir": "source",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "build",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "tsBuildInfoFile": "./.tsbuildinfo",
      "strict": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "typeRoots": ["@types","node_modules/@types"],
      "composite": true,
      "paths": {
        "@team/polydata": ["../../polyData/build"]
      }
    },

    "references": [{ 
      "path": "../../polyData",
    }],
    
  "include": ["source/**/*.ts"],
}